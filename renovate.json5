{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":dependencyDashboard",
    ":label(dependencies)",
    "schedule:weekly",
    ":maintainLockFilesWeekly",
  ],
  "docker-compose": {
    digest: {
      enabled: false,
    },
  },
  packageRules: [
    {
      matchUpdateTypes: [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
      ],
      automerge: true,
    },
    {
      matchPackageNames: ["ruby", "docker.io/ruby"],
      groupName: "ruby",
    },
    {
      matchPackageNames: ["ruby", "docker.io/ruby"],
      matchUpdateTypes: ["major", "minor"],
      enabled: false,
    },
  ],
}
