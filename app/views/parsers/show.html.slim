.row
  .span8
    section
      header
        h2= t :edit_parser
      .content
        = form_for @parser do |form|
          = render partial: 'form', object: form
          p
            = submit_tag t(:save)
        - if @parser.info_url.present?
          = link_to sync_parser_path(@parser), class: "btn btn-primary", title: 'Aktualisiere Quellen mittels Info-URL', method: :post do
            = 'Aktualisiere Quellen mittels Info-URL'
    - @sources.each do |s|
      section
        header
          h3
            = "#{s.canteen.name} (#{s.name})"
            ul.actions
              li
                = link_to edit_source_path(s), title: t(:edit_source, name: s.name) do
                  i.icon-edit
        .content
          dl
            dt= t(:source, :meta_url)
            dd= s.meta_url || t(:source, :no_meta_url)
          - s.feeds.each do |f|
            .feed
              h4="Feed \"#{f.name}\""
              dl
                dt= t(:feed, :url)
                dd= f.url
                dt= t(:feed, :source_url)
                dd= f.source_url || t(:feed, :no_source_url)
                dt= t(:feed, :schedule)
                dd= f.schedule
                dt= t(:feed, :retry)
                dd= f.retry || t(:feed, :no_retry)
                dt= t(:feed, :last_fetched_at)
                dd= f.last_fetched_at || t(:feed, :not_fetched_yet)
  = render partial: 'users/nav'
